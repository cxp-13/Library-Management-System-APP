<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/design_default_color_secondary"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="book_id"
            android:textColor="?android:attr/textColorHighlight"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/book_name"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="25sp"></TextView>

        <TextView
            android:id="@+id/book_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="10sp"></TextView>

        <TextView
            android:id="@+id/book_return_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:inputType="date"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/book_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:inputType="number"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/book_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="15sp"></TextView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/delete_book_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:text="Delete books"
            app:icon="@drawable/delete" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/update_book_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:text="Update books"
            app:icon="@drawable/update" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>