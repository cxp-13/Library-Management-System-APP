<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bookFragment">

    <fragment
        android:id="@+id/bookFragment"
        android:name="com.permissionx.librarymanagementsystem.ui.book.BookFragment"
        android:label="fragment_book"
        tools:layout="@layout/fragment_book" >
        <action
            android:id="@+id/action_bookFragment_to_addBookFragment"
            app:destination="@id/addBookFragment" />
        <action
            android:id="@+id/action_bookFragment_to_bookInfoFragment"
            app:destination="@id/bookInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.permissionx.librarymanagementsystem.ui.user.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.permissionx.librarymanagementsystem.ui.book.AddBookFragment"
        android:label="fragment_add_book"
        tools:layout="@layout/fragment_add_book" >
        <action
            android:id="@+id/action_addBookFragment_to_bookFragment"
            app:destination="@id/bookFragment" />
    </fragment>
    <fragment
        android:id="@+id/myBookFragment"
        android:name="com.permissionx.librarymanagementsystem.ui.book.MyBookFragment"
        android:label="fragment_my_book"
        tools:layout="@layout/fragment_my_book" >
        <action
            android:id="@+id/action_myBookFragment_to_bookInfoFragment"
            app:destination="@id/bookInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookInfoFragment"
        android:name="com.permissionx.librarymanagementsystem.ui.book.BookInfoFragment"
        android:label="fragment_book_info"
        tools:layout="@layout/fragment_book_info" >
        <argument
            android:name="isShowBorrowBtn"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/queryBookFragment"
        android:name="com.permissionx.librarymanagementsystem.ui.book.QueryBookFragment"
        android:label="QueryBookFragment" />
</navigation>